<resources>

    <!-- Base application theme. -->
    <style name="Theme.LensMinder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>

        <item name="android:colorBackground">@color/primaryColor</item>

        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>

        <item name="android:statusBarColor">@color/primaryColor</item>
        <item name="android:windowLightStatusBar">@bool/lightStatusBar</item>

        <item name="android:fontFamily">@font/lato</item>
    </style>

    <!-- Typography-->
    <style name="DefaultTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="BoldTextView" parent="DefaultTextView">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ItalicTextView" parent="DefaultTextView">
        <item name="android:fontFamily">@font/lato_italic</item>
    </style>

    <style name="BoldItalicTextView" parent="BoldTextView">
        <item name="android:fontFamily">@font/lato_bold_italic</item>
    </style>

    <style name="TitleBar" parent="BoldTextView">
        <item name="android:textSize">35sp</item>
    </style>

    <!-- GridMenu -->
    <style name="GridMenuCard" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">#3C8b91ff</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cardCornerRadius">@dimen/homeCardCornerRadius</item>
        <item name="layout_constraintDimensionRatio">2.2:1</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="GridCardTitle" parent="BoldTextView">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- AddNewLens Fragment -->
    <style name="Label" parent="BoldTextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SaveButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="SwitchLabel" parent="BoldTextView">
        <item name="android:gravity">center</item>
        <item name="android:lines">2</item>
        <item name="android:layout_margin">4dp</item>
    </style>
</resources>
