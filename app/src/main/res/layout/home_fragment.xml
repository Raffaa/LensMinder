<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
    <!-- Body -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Title Bar -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TitleBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titleBar_hi"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/userIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_account" />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- Lenses Area -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/homeMargin"
                app:cardCornerRadius="@dimen/homeCardCornerRadius"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topbar"
                app:strokeColor="#3C8b91ff">

                <include layout="@layout/lenses_area" />
            </com.google.android.material.card.MaterialCardView>
            <!-- Advices Area -->
            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/homeMargin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialCard">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/BoldItalicTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:text="@string/advicesArea_title"
                        android:textSize="30sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/lato_italic"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                        android:textSize="18sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </FrameLayout>
            <!-- GridMenu Area -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/homeMargin"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/framelayout">
                <!-- Shop -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/shop"
                        style="@style/GridMenuCard"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:transitionName="sharedElem_homeshop"
                        tools:ignore="MissingConstraints">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/shopLinearLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/shopTitle"
                                    style="@style/GridCardTitle"
                                    android:layout_marginBottom="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Store"
                                    android:textColor="@color/secondaryColor"/>

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/shopSubtitle"
                                    style="@style/GridCardSubtitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Explore our new deals"
                                    android:textColor="@color/secondaryColor"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/shopIcon"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:scaleType="fitEnd"
                                app:layout_constraintStart_toEndOf="@id/shopLinearLayout"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_shop" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- Stocks -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:clickable="false">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/stocks"
                        style="@style/GridMenuCard"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:backgroundTint="@color/secondaryColor"
                        tools:ignore="MissingConstraints">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/stocksLinearLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/frameLayoutStockNumber">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/stocksTitle"
                                    style="@style/GridCardTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:text="Stocks"
                                    android:textColor="@color/secondaryTextColor"/>

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/stocksSubtitle"
                                    style="@style/GridCardSubtitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/secondaryTextColor"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <FrameLayout
                                android:id="@+id/frameLayoutStockNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/stocksLinearLayout"
                                app:layout_constraintTop_toTopOf="parent">
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="center_vertical|end">
                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/stockNumber"
                                        style="@style/TitleBar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:textColor="@color/secondaryTextColor" />

                                    <com.google.android.material.textview.MaterialTextView
                                        style="@style/BoldTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:textColor="@color/secondaryTextColor"
                                        android:text="lenses"/>

                                    <com.google.android.material.textview.MaterialTextView
                                        style="@style/BoldTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:textColor="@color/secondaryTextColor"
                                        android:text="left"/>
                                </androidx.appcompat.widget.LinearLayoutCompat>
                            </FrameLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- History -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/history"
                        style="@style/GridMenuCard"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        tools:ignore="MissingConstraints">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/historyLinearLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/historyTitle"
                                    style="@style/GridCardTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:text="History"
                                    android:textColor="@color/secondaryColor"/>

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/historySubtitle"
                                    style="@style/GridCardSubtitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Check some statistics :)"
                                    android:textColor="@color/secondaryColor"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/historyIcon"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:scaleType="fitEnd"
                                app:layout_constraintStart_toEndOf="@id/historyLinearLayout"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_charts" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <!-- :) -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/homeMargin"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/homeMargin"
                app:layout_constraintTop_toBottomOf="@id/linearLayout">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha=".3"
                    android:text="Oh, hey... you reached the end :)" />
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <!-- Baseline Button -->
    <FrameLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/homeMargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollview">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addNewLensesButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Add New Lenses"
            android:textColor="@color/secondaryTextColor"
            app:backgroundTint="@color/secondaryColor"
            app:cornerRadius="24dp" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>